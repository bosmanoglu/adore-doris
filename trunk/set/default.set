m_in_method=ERS
m_in_dat=`ls ${dataFolder}/${SLCFolder}/${dataFile} | tr -d '\n'`
m_in_vol=`ls ${dataFolder}/${SLCFolder}/${volumeFile} | tr -d '\n'`
m_in_lea=`ls ${dataFolder}/${SLCFolder}/${leaderFile} | tr -d '\n'`
m_in_null=`ls ${dataFolder}/${SLCFolder}/${nullFile} | tr -d '\n'`
# check if the values are set or not. If empty set to "dummy"
if [ -z "${m_in_dat}" ]; then m_in_dat=dummy; fi
if [ -z "${m_in_vol}" ]; then m_in_vol=dummy; fi
