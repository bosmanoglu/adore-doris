dataFile=DAT_01.001    # slc data filename can be a regexp (dat.*, *.slc)
leaderFile=LEA_01.001  # slc leaderfilename can be a regexp
volumeFile=VDF_DAT.001 # slc volume filename can use regexp (vdf*)
nullFile=NUL_01.001    # slc nul filename can be a regexp
#######################################
###  ADORE-Bash One-Line Functions  ###
#######################################
getMasterFolder='ls -F ${dataFolder} |grep "/" | head -n 1|tr -d "/"|tr -d [:blank:] |tr -d "\n" 2>/dev/null'
getSlcFolder='ls -F ${dataFolder} | grep "/" |tr -d "/"| tr -d [:blank:] | tr "\n" ";" 2>/dev/null'
getSlcNoMaster='ls -F ${dataFolder} | grep -v ${masterFolder} | grep "/" |tr -d "/"| tr -d [:blank:] | tr "\n" ";" 2>/dev/null'
getSlcNoExclude='ls -F ${dataFolder} | grep -v -f ${excludesFile} | grep "/" |tr -d "/"| tr -d [:blank:] | tr "\n" ";" 2>/dev/null'
getSlcInterf='ls -F ${dataFolder} | grep -v -f ${excludesFile} | grep -v ${masterFolder} | grep "/" |tr -d "/"| tr -d [:blank:] | tr "\n" ";" 2>/dev/null'


#######################################
###     Default Doris Settings      ###
#######################################
