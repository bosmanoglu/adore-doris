#######################################
###  ADORE-BASH Run-Time Settings   ###
#######################################
projectFolder="."
processFolder=${projectFolder}/process
dataFolder=${projectFolder}/data
projectName="project"
cropsFolder=${processFolder}/${projectName}/crops
i12sFolder=${processFolder}/${projectName}/i12s
baselinesFolder=${processFolder}/${projectName}/baselines
