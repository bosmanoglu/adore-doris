    dumpDefaultSettings ${tempFile}

    #cat ${tempFile} | while read -r line; do          
    #cat "${ADOREFOLDER}/set/default.set" | while read -r line; do          
    #  leftSide=${line%%=*}; #get the left side of name=value pair.
